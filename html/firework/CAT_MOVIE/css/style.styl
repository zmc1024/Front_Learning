*
    margin 0
    padding 0

ul li
    list-style none

#toast
    display none

.movie
    width 100%
    &-head
        width 100%
        height 40px
        line-height 40px
        background-color #1e2025
        color #ffffff
        padding 0 10px
        box-sizing border-box
        display flex
        .iconfont
            width 16px
        .title
            flex 1
            text-align center
    &-info
        padding 15px
        background-color #1e2025
        &__desc
            width 100%
            display flex
            .info-pic
                width 122px
                height 165px
                overflow hidden
                img 
                    width 100%
            .info-container
                flex 1
                color #9b9da2
                font-size 12px
                margin-left 10px
                .name
                    color #ffffff
                    font-size 24px
                    font-family Arial,sans-serif
                    font-weight normal
                .type
                    span 
                        width 40px
                        height 14px
                        display inline-block
                        background url(https://s0.meituan.net/bs/myfe/canary/file/asgard/images/movie/movie-tag-2DIMAX.png)
                        background-size cover
                        vertical-align middle //拦腰对齐
                .btn-wrap
                    display flex
                    // margin-top 10px
                    .flex
                        flex 1
                        background-color #58585b
                        height 32px
                        line-height 32px
                        color #ffffff
                        text-align center
                        border-radius 4px
                        &:first-child
                            margin-right 10px
                        .iconfont
                            font-size 14px
        &__rate
            background-color #000000
            padding 10px
            border-radius 4px
            margin-top 15px
            .rate-title
                display flex
                justify-content space-between
                &__left
                    color #ffffff
                    .icon-maoyandianying
                        color red
                &__right
                    color #68686b
            .rate-detail
                display flex
                &__left
                    flex 454
                    display flex
                    .grade
                        // margin-left 23px
                        text-align center
                        h2
                            color #fcc300
                        p
                            color #68686b
                    .star
                        // margin-right 15px
                        display flex
                        align-items center
                        text-align right
                        .list
                            margin 2px 0
                            display flex
                            align-items center
                            .star-num
                                width 40px
                                font-size 0
                                img
                                    width 8px
                                    height 8px
                            .persent
                                width 78px
                                height 4px
                                background-color #252528
                                position relative
                                .persent-val
                                    display block
                                    position absolute
                                    left 0
                                    top 0
                                    height 100%
                                    background #fcc300
                                    width 80%
                &__right
                    flex 266
                    display flex
                    align-items center
                    img 
                        height 46px
    &-desc
        padding 15px
        .content
            overflow auto
            transition all 1s ease 
        .line-clamp
            display -webkit-box
            -webkit-box-orient vertical
            -webkit-line-clamp 3
            word-wrap break-word
            word-wrap break-all
            overflow hidden
        .arrow 
            text-align center
            font-size 16px
            .iconfont
                display block
                transform rotateZ(0deg)
                transition all 0.5s ease 
        .arrow .up
            display block
            transform rotateZ(180deg)
    &-img
        border-top 1px solid #d9d9d9
        img 
            width 100%
    &-actors
        padding 5px 15px 15px 15px
        ul 
            display flex
            width 100%
            overflow hidden
            .left-margin
                margin-right 6px
                .name
                    display block
                    text-align center
                    font-size 16px
                .role
                    display block
                    text-align center
                    font-size 14px
                    color #979797
           


                        



                        
